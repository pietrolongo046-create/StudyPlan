{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "StudyPlan",
  "version": "1.6.9",
  "identifier": "com.pietrolongo.studyplan",
  "build": {
    "frontendDist": "../web-dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "cd client && npm run dev",
    "beforeBuildCommand": "cd client && npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "StudyPlan",
        "width": 1200,
        "height": 820,
        "minWidth": 1000,
        "minHeight": 650,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "visible": false,
        "backgroundColor": "#0c0d14"
      },
      {
        "label": "widget",
        "title": "",
        "url": "widget-studyplan.html",
        "width": 480,
        "height": 340,
        "minWidth": 320,
        "minHeight": 240,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": true,
        "visible": false,
        "skipTaskbar": true,
        "backgroundColor": "#00000000"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https:; font-src 'self' data:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src ipc: http://ipc.localhost 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Education",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {}
}
